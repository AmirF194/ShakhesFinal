<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shakhes"
    android:label="Shakhes"
    >
    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" ></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" ></uses-permission>
    <uses-permission android:name="android.permission.VIBRATE"></uses-permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>
    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true"
        android:resizeable="true"
        >
    </supports-screens>
    <application
        android:name="fathi.shakhes.MySingleton"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:label="@string/app_name"
        >

        <activity
            android:name="fathi.shakhes.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="fathi.shakhes.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true"
            ></activity>

        <activity android:name="fathi.shakhes.LoginDorm"
            android:screenOrientation="portrait"
            android:theme="@style/BlackTheme"
            ></activity>
        <activity android:name="fathi.shakhes.LoginFood"
            android:screenOrientation="portrait"
            android:theme="@style/BlackTheme"
            ></activity>

        <activity android:name="fathi.shakhes.loginShareBook.LoginShareBook"
            android:screenOrientation="portrait"
            android:theme="@style/BlackTheme"
            ></activity>
        <activity android:name="fathi.shakhes.loginShareBook.RestorePasswordShareBook"
            android:screenOrientation="portrait"
            android:theme="@style/BlackTheme"
            ></activity>

        <activity android:name="fathi.shakhes.loginShareBook.RegisterShareBook"
            android:screenOrientation="portrait"
            android:theme="@style/BlackTheme"
            ></activity>

        <activity android:name="fathi.shakhes.loginShareBook.OpenLogSharebook"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:noHistory="true"
            ></activity>


        <activity android:name="fathi.shakhes.FoodActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.ContactUsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.FoodListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.DormActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.BehdashtListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.DormListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.NewsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.FoodTableTab.TabTable"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.DaySaleFood"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.FoodMessageTab.TabMessage"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.GuestActivity"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.TasisatActivity"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.OtherListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.RefahListActivity"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>
        <activity android:name="fathi.shakhes.SingleNewsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            ></activity>

    </application>
</manifest>